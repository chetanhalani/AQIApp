<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    tools:context=".journey.AQIDetailFragment"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCityName"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tvCurrentAQI"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tvCurrentAQI" />

        <TextView
            android:id="@+id/tvCurrentAQI"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tvCityName"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/tvCityName" />

    </RelativeLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <TextView
        android:id="@+id/tvLastUpdateAt"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_height="50dp"/>

</LinearLayout>